<?xml version="1.0"?>
<config>
    <modules>
        <Smartdata_Apc>
            <version>2.0.0</version>
        </Smartdata_Apc>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Smartdata_Apc before="Mage_Adminhtml">Smartdata_Apc_Adminhtml</Smartdata_Apc>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <models>
            <smartdata_apc>
                <class>Smartdata_Apc_Model</class>
            </smartdata_apc>
        </models>
    </global>
    <adminhtml>
        <events>
            <controller_action_postdispatch_adminhtml_cache_flushAll>
                <observers>
                    <smartdata_apc>
                        <type>singleton</type>
                        <class>smartdata_apc/observer</class>
                        <method>clearApc</method>
                    </smartdata_apc>
                </observers>
            </controller_action_postdispatch_adminhtml_cache_flushAll>
            <controller_action_postdispatch_adminhtml_cache_flushSystem>
                <observers>
                    <smartdata_apc>
                        <type>singleton</type>
                        <class>smartdata_apc/observer</class>
                        <method>clearApc</method>
                    </smartdata_apc>
                </observers>
            </controller_action_postdispatch_adminhtml_cache_flushSystem>
            <core_block_abstract_to_html_after>
                <observers>
                    <smartdata_apc>
                        <type>singleton</type>
                        <class>smartdata_apc/observer</class>
                        <method>injectHtml</method>
                    </smartdata_apc>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </adminhtml>
</config>
